{
  "extends": [
    "@rocketseat/eslint-config/react",
    "plugin:tailwindcss/recommended",
    "next/core-web-vitals"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "tailwindcss/no-custom-classname": "off",
        "prettier/prettier": [
          "error",
          {
            "semi": true
          }
        ]
      }
    }
  ]
}